{% extends 'base.html.twig' %}

{% block title %} IS BBK - Souhrn docházky {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="cell large-12">
            <h3>Souhrn docházky</h3>
            <table class="unstriped margin-top-1" id="table_attendance_user" style="width: 60%">
                <thead>
                <tr class="row align-center">
                    <th class="column medium-3 text-center">Datum</th>
                    <th class="column medium-3 text-center">Docházka</th>
                    <th class="column medium-5 text-center">ID uživatele</th>
                </tr>
                </thead>
                <tbody id="table_attendance_user">
                {% for atd in attendance %}
                    <tr class="row align-center" style="margin-top: 2px">
                        <td class="column medium-3 text-center">{{ atd.date }}</td>
                        {% if atd.attendanceCheck == 1 %}
                            <td class="column medium-3 text-center" style="color: green;font-weight: bold">Přítomen</td>
                        {% endif %}
                        {% if atd.attendanceCheck == 0 %}
                            <td class="column medium-3 text-center" style="color: red;font-weight: bold">Nepřítomen</td>
                        {% endif %}
                        <td class="column medium-5 text-center" style="font-weight: bold">{{ atd.usersId }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}