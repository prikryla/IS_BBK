{% extends 'base.html.twig' %}

{% block title %} IS BBK - Vytvořit statistiku{% endblock %}

{% block body %}
    <div class="content">
        <div class="grid-container">
            <h2>Vytvořit statistiku</h2>
            <div class="grid-x grid-padding-x">
                <div class="cell large-12">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                </div>
                <div class="cell medium-6">
                    {{ form_row(form.successfulFt) }}

                    {{ form_row(form.unsuccessfulFt) }}

                    {{ form_row(form.twoPoints) }}
                </div>
                <div class="cell medium-6">
                    {{ form_row(form.threePoints) }}

                    {{ form_row(form.fouls) }}

                    {{ form_row(form.points) }}
                </div>
            </div>
            <div class="text-center">
                <a href="{{ path('show-statistics') }}" class="btn btn-warning">Zpět</a>
                &nbsp;
                {{ form_widget(form.save, { 'label': 'Uložit změny', 'attr': { 'class': 'btn btn-success' }}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}